using UnityEngine;

public class ShowUITextOnApproach : MonoBehaviour
{
    [Tooltip("World-space canvas to show/hide")]
    public Canvas uiCanvas;

    [Tooltip("Distance at which UI becomes visible")]
    public float showDistance = 3f;

    private Transform player;

    void Start()
    {
        GameObject playerObject = GameObject.FindGameObjectWithTag("Player");
        if (playerObject != null)
        {
            player = playerObject.transform;
        }
        else
        {
            Debug.LogError("Player object with tag 'Player' not found in the scene.");
        }

        if (uiCanvas != null)
        {
            uiCanvas.enabled = false;
        }
        else
        {
            Debug.LogError("UI Canvas not assigned on " + gameObject.name);
        }
    }

    void Update()
    {
        if (player == null || uiCanvas == null)
            return;

        float distance = Vector3.Distance(player.position, transform.position);
        uiCanvas.enabled = distance <= showDistance;
    }
}
